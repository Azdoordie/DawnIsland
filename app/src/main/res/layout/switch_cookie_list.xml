    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <com.yanrou.dawnisland.ListViewAdaptWidth
        android:id="@+id/cookie_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

